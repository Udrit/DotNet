@model UdritDhakal..Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}



<h1>@ViewData["Title"]</h1>
<h2>Create a new account.</h2>
<hr />



<form id="registerForm" action="AddUser" method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="FirstName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="LastName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="LastName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="Address" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Address"></label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-6">
            <button asp-action="Index" type="submit" class="w-100 btn btn-lg btn-primary">Back</button>
        </div>
        <div class="col-6">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary float-end">Update</button>
        </div>
    </div>
</form>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}