@model UdritDhakal..Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}



<h1>@ViewData["Title"]</h1>
<h2>Create a new account.</h2>
<hr />



<form id="registerForm" action="AddUser" method="post" enctype="multipart/form-data">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="FirstName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="LastName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="LastName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="Address" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Address"></label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <div class="col-6">
            <div class="form-floating">
                <input asp-for="PhoneNumber" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">

            <div class="form-floating">
                <select asp-for="UserRoleId" class="form-control">
                    <option value=null>-Choose-</option>
                    <option value="ADMIN">ADMIN </option>
                    <option value="STUDENT">STUDENT </option>
                    <option value="USER">USER </option>
                </select>
                <label asp-for="UserRoleId"></label>
                <span asp-validation-for="UserRoleId" class="text-danger"></span>
            </div>

        </div>
   
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="image-uploaded">
                    <img id="NoPhoto" src="~/images/NoUserPhoto.webp" class="img-thumbnail align-center " style="height:200px;width:180px;">


            </div>
            <div class="row">
                <div class="input-group input-file mt-1">
                    <label class="input-group-btn ">
                        <span class="btn btn-large btn-primary">
                            Upload Photo
                            <input asp-for="profilePicture" class="form-control" onchange="readURL(this, '@Model?.profileUrl')" style="display: none;" />
                            <span asp-validation-for="profilePicture" class="text-danger"></span>
                        </span>
                    </label>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating">
                <select asp-for="StudentId" class="form-select form-select-sm" aria-label=".form-select-sm example" asp-items="@(new SelectList(ViewBag.Student,"Id","FirstName"))">
                    <option selected disabled value="null">Students</option>
                    <option value="0">None</option>
                </select>
                <label class="form-label">Choose Student</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <button asp-action="Index" type="submit" class="w-100 btn btn-lg btn-primary">Back</button>
        </div>
        <div class="col-6">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary float-end">Register</button>
        </div>
    </div>
</form>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function readURL(input, url) {
            if (input.files && input.files[0]) {

                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#NoPhoto').attr('src', e.target.result);
                }
                
                
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}