@model Prabin_SMS.Models.Entity.Course
﻿@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Register";
}



<h1>@ViewData["Title"]</h1>
<h2>Create a new account.</h2>
<hr />


<form action="AddEdit" method="post">
    <input asp-for="Id" hidden/>
    <div class="row">
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="CourseName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="CourseName"></label>
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="CourseDescription" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="CourseDescription"></label>
                <span asp-validation-for="CourseDescription" class="text-danger"></span>
            </div>
        </div>
           

    </div>
        
    <div class="row">
        
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="CreditHours" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="CreditHours"></label>
                <span asp-validation-for="CreditHours" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating">
                <input asp-for="FullMarks" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="FullMarks"></label>
                <span asp-validation-for="FullMarks" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <input  type="checkbox" asp-for="IsActive">
                <label class="form-check-label" asp-for="IsActive">

                </label>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>


    </div>
 
    <div class="row">
        <div class="col-6">
            <a asp-action="Index"  class="w-100 btn btn-lg btn-primary">Back</a>
        </div>
        @if (User.IsInRole("ADMIN"))
        {
                @if (Model.Id > 0)
                {
                    <div class="col-6">
                    <button class="w-100 btn btn-lg btn-primary  float-end" type="submit">Update</button>
                    </div>
                }
                else
                {
                    <div class="col-6">
                    <button class="w-100 btn btn-lg btn-primary  float-end" type="submit">Create</button>
                    </div>
                }
            }
    </div>
</form>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}