@model IEnumerable<UdritDhakal.Models.Entity.Category>

<div class="row">
    <div class="col-12">
        <a class="btn btn-primary float-end" asp-action="AddEdit">AddNew</a>
    </div>
</div>


<div class="row col-12">
    <table id="myTable">
        <thead>
            <tr>
                <th>CategoryName </th>
                <th> CategoryDescription </th>
           
                <th> IsAvailable </th>
                  <th> Action</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model)
            {
                <tr>
                    <td> @items.categoryName </td>
                    <td> @items.categoryDescription </td>
               
                    <td> @items.IsAvaliable </td>

                    <td>
                        <a class="btn btn-primary " asp-action="AddEdit" asp-route-id="@items.Id">Edit</a>
                      
                        <a class="btn btn-danger " asp-action="Delete" onclick="alert('Are you sure you want to delete?')" asp-route-id="@items.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6">

        <a class="btn mt-2 btn-secondary" asp-action="Index">Back to List</a>

    </div>
</div>
