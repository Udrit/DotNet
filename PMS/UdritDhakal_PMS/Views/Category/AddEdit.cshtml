@model UdritDhakal.Models.Entity.Category


@if (Model.Id > 0)
{
    <h1>Edit Category Info</h1>
}
else
{
    <h2>Create Category Info</h2>
}

<form  method="post" asp-action="AddEdit">
    <input asp-for="Id" hidden />

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="categoryName" class="control-label" ></label>
                <input asp-for="categoryName" class="form-control" required />
                <span asp-validation-for="categoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="categoryDescription" class="control-label"></label>
                <input asp-for="categoryDescription" class="form-control" required />
                <span asp-validation-for="categoryDescription" class="text-danger"></span>
            </div>
        </div>
 
    </div>
    <div class="row">
        <div class="form-group">
            <label asp-for="IsAvaliable" class="control-label">Is Active</label>
            <input class="form-check-input" type="checkbox" asp-for="IsAvaliable" />
            <span asp-validation-for="IsAvaliable" class="text-danger"></span>
        </div>
    </div>
  

    <div class="row">

    <div class="col">
        <a class="btn mt-2 btn-secondary" asp-action="Index">Back to List</a>
    </div>

    <div class="col">
    <div class="form-group mt-5 float-end">
        <button type="submit" class="btn btn-primary">@((Model.Id > 0) ? "Update" : "Create")</button>
    </div>

    </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}